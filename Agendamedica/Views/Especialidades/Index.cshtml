@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EspecialidadeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EspecialidadeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EspecialidadeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
